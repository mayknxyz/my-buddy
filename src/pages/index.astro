---
import { getCollection } from 'astro:content';
import Badge from '../components/atoms/Badge.astro';
import PageTemplate from '../components/templates/PageTemplate.astro';
import { refName } from '../utils/display';

// Fetch all collections
const tasks = await getCollection('tasks');
const projects = await getCollection('projects');
const accounts = await getCollection('accounts');
const allDeals = await getCollection('deals');
const accountNames: Record<string, string> = Object.fromEntries(
  accounts.map(a => [a.id, a.data.title || a.id.replace(/-/g, ' ')])
);
const meetings = await getCollection('meetings');
const journals = await getCollection('journals');
const kb = await getCollection('kb');

// === Section 0: Today/Focus View (GH #30) ===
const today = new Date().toISOString().split('T')[0];
const priorityOrder: Record<string, number> = { urgent: 0, high: 1, medium: 2, low: 3 };

const todayTasks = tasks
  .filter((t) => t.data.due && t.data.status !== 'done' && t.data.due.toISOString().split('T')[0] <= today)
  .sort((a, b) => (priorityOrder[a.data.priority] ?? 9) - (priorityOrder[b.data.priority] ?? 9)
    || new Date(a.data.due!).getTime() - new Date(b.data.due!).getTime());

const todayMeetings = meetings
  .filter((m) => m.data.date.toISOString().split('T')[0] === today);

const inProgressTasks = tasks
  .filter((t) => t.data.status === 'in-progress');

const projectNames: Record<string, string> = Object.fromEntries(
  projects.map(p => [p.id, p.data.title || p.id.replace(/-/g, ' ')])
);

const todayJournal = journals.find((j) => j.data.date.toISOString().split('T')[0] === today);

// === Section 1: Urgent Tasks & Active Projects (US1) ===
const urgentTasks = tasks.filter(
  (task) =>
    (task.data.priority === 'urgent' || task.data.priority === 'high') &&
    task.data.status !== 'done'
);
const activeProjects = projects.filter(
  (project) => project.data.status === 'in-progress'
);

// === Section 2: Quick Stats (US2) ===
const activeClientsCount = accounts.filter(
  (a) => a.data.type === 'client' && a.data.status === 'active'
).length;
const activeLeadsCount = accounts.filter(
  (a) => a.data.type === 'lead' && a.data.status === 'active'
).length;

// Deal pipeline stats
const dealsByStage = {
  discovery: allDeals.filter((d) => d.data.stage === 'discovery').length,
  proposal: allDeals.filter((d) => d.data.stage === 'proposal').length,
  negotiation: allDeals.filter((d) => d.data.stage === 'negotiation').length,
  'closed-won': allDeals.filter((d) => d.data.stage === 'closed-won').length,
  'closed-lost': allDeals.filter((d) => d.data.stage === 'closed-lost').length,
};
const totalDealValue = allDeals
  .filter((d) => d.data.stage !== 'closed-lost')
  .reduce((sum, d) => sum + (d.data.value || 0), 0);

const projectsByStatus = {
  planning: projects.filter((p) => p.data.status === 'planning').length,
  'in-progress': projects.filter((p) => p.data.status === 'in-progress').length,
  done: projects.filter((p) => p.data.status === 'done').length,
  paused: projects.filter((p) => p.data.status === 'paused').length,
};

const tasksByStatus = {
  todo: tasks.filter((t) => t.data.status === 'todo').length,
  'in-progress': tasks.filter((t) => t.data.status === 'in-progress').length,
  done: tasks.filter((t) => t.data.status === 'done').length,
  blocked: tasks.filter((t) => t.data.status === 'blocked').length,
};

// === Section 3: Upcoming Deadlines (US3) ===
const upcomingTasks = tasks
  .filter((task) => task.data.due && task.data.status !== 'done')
  .sort((a, b) => new Date(a.data.due!).getTime() - new Date(b.data.due!).getTime())
  .slice(0, 5);

const upcomingProjects = projects
  .filter((project) => project.data.deadline && project.data.status !== 'done')
  .sort((a, b) => new Date(a.data.deadline!).getTime() - new Date(b.data.deadline!).getTime())
  .slice(0, 5);

// === Section 4: Recent Activity (US4) ===
const recentMeetings = [...meetings]
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

const recentJournals = [...journals]
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

const recentKB = kb
  .filter((article) => article.data.updated)
  .sort((a, b) => new Date(b.data.updated!).getTime() - new Date(a.data.updated!).getTime())
  .slice(0, 3);

// Badge variant mappings
const taskStatusVariants: Record<string, 'success' | 'warning' | 'danger' | 'info' | 'neutral'> = {
  todo: 'neutral',
  'in-progress': 'warning',
  done: 'success',
  blocked: 'danger',
};

const taskPriorityVariants: Record<string, 'success' | 'warning' | 'danger' | 'info' | 'neutral'> = {
  low: 'neutral',
  medium: 'info',
  high: 'warning',
  urgent: 'danger',
};

const projectStatusVariants: Record<string, 'success' | 'warning' | 'danger' | 'info' | 'neutral'> = {
  planning: 'info',
  'in-progress': 'warning',
  done: 'success',
  paused: 'neutral',
};

const meetingTypeVariants: Record<string, 'success' | 'warning' | 'danger' | 'info' | 'neutral'> = {
  discovery: 'info',
  standup: 'neutral',
  review: 'warning',
  planning: 'success',
  retrospective: 'danger',
  other: 'neutral',
};

const moodVariants: Record<string, 'success' | 'warning' | 'danger' | 'info' | 'neutral'> = {
  great: 'success',
  good: 'success',
  neutral: 'neutral',
  bad: 'warning',
  terrible: 'danger',
};

const moodEmojis: Record<string, string> = {
  great: 'üòÑ',
  good: 'üôÇ',
  neutral: 'üòê',
  bad: 'üòï',
  terrible: 'üò¢',
};

// Track keyboard navigation index across all sections
let globalIndex = 0;
---

<PageTemplate title="Dashboard"><div data-pagefind-ignore="all">
  <!-- Section 0: Today -->
  <section class="mb-8">
    <div class="rounded-lg border border-[var(--color-border)] bg-[var(--color-surface)] p-6">
      <h2 class="text-xl font-bold text-[var(--color-text)] mb-4">Today</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Today's Tasks -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">Today's Tasks</h3>
          {todayTasks.length > 0 ? (
            <div class="rounded-lg border border-[var(--color-border)] overflow-hidden">
              <table class="w-full text-sm">
                <thead>
                  <tr class="bg-[var(--color-surface)] text-left text-[var(--color-text-muted)]">
                    <th class="py-3 px-4 font-medium">Task</th>
                    <th class="py-3 px-4 font-medium">Priority</th>
                    <th class="py-3 px-4 font-medium">Due</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-[var(--color-border)]">
                  {todayTasks.map((task) => {
                    const idx = globalIndex++;
                    const dueStr = task.data.due!.toISOString().split('T')[0];
                    const isOverdue = dueStr < today;
                    return (
                      <tr class="hover:bg-[var(--color-surface-hover)] transition-colors">
                        <td class="py-3 px-4">
                          <a
                            href={`/tasks/${task.id}/`}
                            class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline"
                            data-focusable
                            data-index={idx}
                            tabindex="0"
                          >
                            {task.id.replace(/^\d{4}-\d{2}-\d{2}-/, '').replace(/-/g, ' ')}
                          </a>
                        </td>
                        <td class="py-3 px-4">
                          <Badge variant={taskPriorityVariants[task.data.priority]}>{task.data.priority}</Badge>
                        </td>
                        <td class={`py-3 px-4 ${isOverdue ? 'text-red-400 font-medium' : 'text-[var(--color-text)]'}`}>
                          {dueStr}{isOverdue ? ' (overdue)' : ''}
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          ) : (
            <p class="text-[var(--color-text-muted)] text-sm py-4">No tasks due today.</p>
          )}
        </div>

        <!-- Today's Meetings -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">Today's Meetings</h3>
          {todayMeetings.length > 0 ? (
            <div class="space-y-3">
              {todayMeetings.map((meeting) => {
                const idx = globalIndex++;
                return (
                  <div class="bg-[var(--color-surface-hover)]/50 rounded-lg p-3">
                    <a
                      href={`/meetings/${meeting.id}/`}
                      class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline text-sm font-medium"
                      data-focusable
                      data-index={idx}
                      tabindex="0"
                    >
                      {meeting.id.replace(/^\d{4}-\d{2}-\d{2}-/, '').replace(/-/g, ' ')}
                    </a>
                    <div class="flex items-center gap-2 mt-1">
                      <Badge variant={meetingTypeVariants[meeting.data.type]}>{meeting.data.type}</Badge>
                      <span class="text-[var(--color-text-muted)] text-xs">
                        {meeting.data.attendees.length} attendee{meeting.data.attendees.length !== 1 ? 's' : ''}
                      </span>
                    </div>
                  </div>
                );
              })}
            </div>
          ) : (
            <p class="text-[var(--color-text-muted)] text-sm py-4">No meetings today.</p>
          )}
        </div>

        <!-- In Progress -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">In Progress</h3>
          {inProgressTasks.length > 0 ? (
            <div class="rounded-lg border border-[var(--color-border)] overflow-hidden">
              <table class="w-full text-sm">
                <thead>
                  <tr class="bg-[var(--color-surface)] text-left text-[var(--color-text-muted)]">
                    <th class="py-3 px-4 font-medium">Task</th>
                    <th class="py-3 px-4 font-medium">Project</th>
                    <th class="py-3 px-4 font-medium">Priority</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-[var(--color-border)]">
                  {inProgressTasks.map((task) => {
                    const idx = globalIndex++;
                    return (
                      <tr class="hover:bg-[var(--color-surface-hover)] transition-colors">
                        <td class="py-3 px-4">
                          <a
                            href={`/tasks/${task.id}/`}
                            class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline"
                            data-focusable
                            data-index={idx}
                            tabindex="0"
                          >
                            {task.id.replace(/^\d{4}-\d{2}-\d{2}-/, '').replace(/-/g, ' ')}
                          </a>
                        </td>
                        <td class="py-3 px-4 text-[var(--color-text)]">
                          {refName(task.data.project.id, projectNames)}
                        </td>
                        <td class="py-3 px-4">
                          <Badge variant={taskPriorityVariants[task.data.priority]}>{task.data.priority}</Badge>
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          ) : (
            <p class="text-[var(--color-text-muted)] text-sm py-4">Nothing in progress.</p>
          )}
        </div>

        <!-- Journal -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">Journal</h3>
          {todayJournal ? (
            <div class="bg-[var(--color-surface-hover)]/50 rounded-lg p-3">
              <a
                href={`/journals/${todayJournal.id}/`}
                class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline text-sm font-medium"
                data-focusable
                data-index={globalIndex++}
                tabindex="0"
              >
                Today's entry
                {todayJournal.data.mood && (
                  <span class="ml-2" title={todayJournal.data.mood}>
                    {moodEmojis[todayJournal.data.mood]}
                  </span>
                )}
              </a>
            </div>
          ) : (
            <div class="py-4">
              <a
                href="/journals/"
                class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline text-sm"
                data-focusable
                data-index={globalIndex++}
                tabindex="0"
              >
                No journal entry for today ‚Äî start one?
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Section 1: Urgent Tasks & Active Projects -->
  <section class="mb-8">
    <div class="rounded-lg border border-[var(--color-border)] bg-[var(--color-surface)] p-6">
      <h2 class="text-xl font-bold text-[var(--color-text)] mb-4">Urgent Work</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Urgent Tasks -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">Urgent Tasks</h3>
          {urgentTasks.length > 0 ? (
            <div class="rounded-lg border border-[var(--color-border)] overflow-hidden">
              <table class="w-full text-sm">
                <thead>
                  <tr class="bg-[var(--color-surface)] text-left text-[var(--color-text-muted)]">
                    <th class="py-3 px-4 font-medium">Task</th>
                    <th class="py-3 px-4 font-medium">Priority</th>
                    <th class="py-3 px-4 font-medium">Status</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-[var(--color-border)]">
                  {urgentTasks.map((task) => {
                    const idx = globalIndex++;
                    return (
                      <tr class="hover:bg-[var(--color-surface-hover)] transition-colors">
                        <td class="py-3 px-4">
                          <a
                            href={`/tasks/${task.id}/`}
                            class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline"
                            data-focusable
                            data-index={idx}
                            tabindex="0"
                          >
                            {task.id.replace(/^\d{4}-\d{2}-\d{2}-/, '').replace(/-/g, ' ')}
                          </a>
                        </td>
                        <td class="py-3 px-4">
                          <Badge variant={taskPriorityVariants[task.data.priority]}>{task.data.priority}</Badge>
                        </td>
                        <td class="py-3 px-4">
                          <Badge variant={taskStatusVariants[task.data.status]}>{task.data.status}</Badge>
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          ) : (
            <p class="text-[var(--color-text-muted)] text-sm py-4">No urgent or high-priority tasks.</p>
          )}
        </div>

        <!-- Active Projects -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">Active Projects</h3>
          {activeProjects.length > 0 ? (
            <div class="rounded-lg border border-[var(--color-border)] overflow-hidden">
              <table class="w-full text-sm">
                <thead>
                  <tr class="bg-[var(--color-surface)] text-left text-[var(--color-text-muted)]">
                    <th class="py-3 px-4 font-medium">Project</th>
                    <th class="py-3 px-4 font-medium">Account</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-[var(--color-border)]">
                  {activeProjects.map((project) => {
                    const idx = globalIndex++;
                    return (
                      <tr class="hover:bg-[var(--color-surface-hover)] transition-colors">
                        <td class="py-3 px-4">
                          <a
                            href={`/projects/${project.id}/`}
                            class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline"
                            data-focusable
                            data-index={idx}
                            tabindex="0"
                          >
                            {project.data.title || project.id.replace(/-/g, ' ')}
                          </a>
                        </td>
                        <td class="py-3 px-4 text-[var(--color-text)]">{refName(project.data.account.id, accountNames)}</td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          ) : (
            <p class="text-[var(--color-text-muted)] text-sm py-4">No active projects.</p>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Section 2: Quick Stats -->
  <section class="mb-8">
    <div class="rounded-lg border border-[var(--color-border)] bg-[var(--color-surface)] p-6">
      <h2 class="text-xl font-bold text-[var(--color-text)] mb-4">Quick Stats</h2>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <!-- Accounts -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-2">Accounts</h3>
          <div class="space-y-1 text-sm">
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Active Clients</span>
              <span class="text-[var(--color-text)]">{activeClientsCount}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Active Leads</span>
              <span class="text-[var(--color-text)]">{activeLeadsCount}</span>
            </div>
          </div>
        </div>

        <!-- Projects -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-2">Projects</h3>
          <div class="space-y-1 text-sm">
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Planning</span>
              <span class="text-[var(--color-text)]">{projectsByStatus.planning}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">In Progress</span>
              <span class="text-[var(--color-text)]">{projectsByStatus['in-progress']}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Done</span>
              <span class="text-[var(--color-text)]">{projectsByStatus.done}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Paused</span>
              <span class="text-[var(--color-text)]">{projectsByStatus.paused}</span>
            </div>
          </div>
        </div>

        <!-- Tasks -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-2">Tasks</h3>
          <div class="space-y-1 text-sm">
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Todo</span>
              <span class="text-[var(--color-text)]">{tasksByStatus.todo}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">In Progress</span>
              <span class="text-[var(--color-text)]">{tasksByStatus['in-progress']}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Done</span>
              <span class="text-[var(--color-text)]">{tasksByStatus.done}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Blocked</span>
              <span class="text-[var(--color-text)]">{tasksByStatus.blocked}</span>
            </div>
          </div>
        </div>

        <!-- Pipeline -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-2">Pipeline</h3>
          <div class="space-y-1 text-sm">
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Discovery</span>
              <span class="text-[var(--color-text)]">{dealsByStage.discovery}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Proposal</span>
              <span class="text-[var(--color-text)]">{dealsByStage.proposal}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Negotiation</span>
              <span class="text-[var(--color-text)]">{dealsByStage.negotiation}</span>
            </div>
            <div class="flex justify-between">
              <span class="text-[var(--color-text-muted)]">Won</span>
              <span class="text-[var(--color-text)]">{dealsByStage['closed-won']}</span>
            </div>
            <div class="flex justify-between font-medium mt-2 pt-2 border-t border-[var(--color-border)]">
              <span class="text-[var(--color-text-muted)]">Total Value</span>
              <span class="text-[var(--color-text)]">{totalDealValue > 0 ? `$${totalDealValue.toLocaleString()}` : '-'}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section 3: Upcoming Deadlines -->
  <section class="mb-8">
    <div class="rounded-lg border border-[var(--color-border)] bg-[var(--color-surface)] p-6">
      <h2 class="text-xl font-bold text-[var(--color-text)] mb-4">Upcoming Deadlines</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Task Deadlines -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">Task Deadlines</h3>
          {upcomingTasks.length > 0 ? (
            <div class="rounded-lg border border-[var(--color-border)] overflow-hidden">
              <table class="w-full text-sm">
                <thead>
                  <tr class="bg-[var(--color-surface)] text-left text-[var(--color-text-muted)]">
                    <th class="py-3 px-4 font-medium">Task</th>
                    <th class="py-3 px-4 font-medium">Due</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-[var(--color-border)]">
                  {upcomingTasks.map((task) => {
                    const idx = globalIndex++;
                    return (
                      <tr class="hover:bg-[var(--color-surface-hover)] transition-colors">
                        <td class="py-3 px-4">
                          <a
                            href={`/tasks/${task.id}/`}
                            class="text-[var(--color-primary)] hover:text-[var(--color-primary-hover)] hover:underline"
                            data-focusable
                            data-index={idx}
                            tabindex="0"
                          >
                            {task.id.replace(/^\d{4}-\d{2}-\d{2}-/, '').replace(/-/g, ' ')}
                          </a>
                        </td>
                        <td class="py-3 px-4 text-[var(--color-text)]">
                          {task.data.due!.toISOString().split('T')[0]}
                        </td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          ) : (
            <p class="text-[var(--color-text-muted)] text-sm py-4">No upcoming task deadlines.</p>
          )}
        </div>

        <!-- Project Deadlines -->
        <div class="bg-[var(--color-surface)]/50 rounded-lg p-4">
          <h3 class="text-lg font-semibold text-[var(--color-text)] mb-3">Project Deadlines</h3>
          {upcomingProjects.length > 0 ? (
            <div class="rounded-lg border border-[var(--color-border)] overflow-hidden">
              <table class="w-full text-sm">
                <thead>
                  <tr class="bg-[var(--color-surface)] text-left text-[var(--color-text-muted)]">
                    <th class="py-3 px-4 font-medium">Project</th>
