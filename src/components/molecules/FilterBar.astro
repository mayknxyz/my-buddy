---
import SearchInput from '../atoms/SearchInput.astro';

interface Props {
  searchPlaceholder?: string;
}

const { searchPlaceholder } = Astro.props;
---

<div class="flex flex-wrap items-center gap-3 mb-4" id="filter-bar">
  <slot />
  <div class="ml-auto">
    <SearchInput placeholder={searchPlaceholder} />
  </div>
</div>
