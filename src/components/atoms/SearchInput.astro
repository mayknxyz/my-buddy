---
interface Props {
  placeholder?: string;
}

const { placeholder = 'Search...' } = Astro.props;
---

<input
  type="search"
  id="search"
  name="search"
  placeholder={placeholder}
  data-filter-search
  class="px-3 py-1.5 text-sm rounded-md bg-[var(--color-surface)] text-[var(--color-text)]
         border border-[var(--color-border)] placeholder-[var(--color-text-muted)]
         w-48
         focus-visible:outline-2 focus-visible:outline-blue-600 focus-visible:outline-offset-2"
/>
