---
/**
 * HelpModal - Displays all available keyboard shortcuts
 *
 * This component is created dynamically by the keyboard.ts script.
 * This Astro file serves as documentation for the component structure.
 *
 * Trigger: Press '?' to open
 * Close: Press '?' or 'Escape' to close
 * Accessibility: Focus trapped within modal, focus restored on close
 */
---

<!-- HelpModal is dynamically created by src/scripts/keyboard.ts -->
<!-- This file documents the expected structure for reference -->

<div
  id="help-modal"
  role="dialog"
  aria-modal="true"
  aria-labelledby="help-modal-title"
  class="fixed inset-0 flex items-center justify-center bg-black/75 z-[10000] pointer-events-auto"
>
  <div class="bg-slate-800 rounded-lg p-6 max-w-[600px] max-h-[80vh] overflow-y-auto text-slate-200">
    <h2 id="help-modal-title" class="text-xl font-semibold mb-4 text-white">
      Keyboard Shortcuts
    </h2>

    <!-- Navigation Section -->
    <div class="mb-4">
      <h3 class="text-sm font-medium text-slate-400 mb-2 uppercase tracking-wider">
        Navigation
      </h3>
      <div class="grid gap-1">
        <div class="flex justify-between py-1">
          <span class="font-mono bg-slate-700 px-2 py-0.5 rounded text-sm">g h</span>
          <span class="text-slate-300 text-sm">Go to Home</span>
        </div>
        <div class="flex justify-between py-1">
          <span class="font-mono bg-slate-700 px-2 py-0.5 rounded text-sm">g p</span>
          <span class="text-slate-300 text-sm">Go to Projects</span>
        </div>
        <!-- Additional shortcuts populated by keyboard.ts -->
      </div>
    </div>

    <!-- List Navigation Section -->
    <div class="mb-4">
      <h3 class="text-sm font-medium text-slate-400 mb-2 uppercase tracking-wider">
        List Navigation
      </h3>
      <div class="grid gap-1">
        <div class="flex justify-between py-1">
          <span class="font-mono bg-slate-700 px-2 py-0.5 rounded text-sm">j</span>
          <span class="text-slate-300 text-sm">Next item</span>
        </div>
        <div class="flex justify-between py-1">
          <span class="font-mono bg-slate-700 px-2 py-0.5 rounded text-sm">k</span>
          <span class="text-slate-300 text-sm">Previous item</span>
        </div>
        <div class="flex justify-between py-1">
          <span class="font-mono bg-slate-700 px-2 py-0.5 rounded text-sm">Enter</span>
          <span class="text-slate-300 text-sm">Open selected item</span>
        </div>
      </div>
    </div>

    <!-- Close hint -->
    <p class="text-center text-slate-500 text-xs mt-4">
      Press ? or Escape to close
    </p>
  </div>
</div>

<style>
  /* HelpModal styles - these are also defined inline in keyboard.ts */
  #help-modal {
    /* Ensure modal appears above everything */
    z-index: 10000;
  }
</style>
