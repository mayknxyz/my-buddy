<!-- Mobile hamburger button -->
<button
  id="sidebar-toggle"
  type="button"
  class="fixed top-3 left-3 z-sidebar rounded-md bg-surface-1 p-2 text-text-secondary hover:bg-surface-2 hover:text-text-primary lg:hidden print:hidden"
  aria-label="Open navigation"
>
  <svg class="size-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
    <path d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
  </svg>
</button>

<!-- Mobile backdrop -->
<div
  id="sidebar-backdrop"
  class="fixed inset-0 z-sidebar hidden bg-black/50 lg:hidden print:hidden"
  aria-hidden="true"
></div>

<!-- Sidebar -->
<aside
  id="sidebar"
  class="fixed inset-y-0 left-0 z-sidebar flex w-56 -translate-x-full flex-col border-r border-border bg-surface-1 transition-transform duration-200 lg:translate-x-0 print:hidden"
  aria-label="Main navigation"
>
  <!-- Header -->
  <div class="flex h-12 items-center justify-between border-b border-border px-3">
    <a href="/" class="text-sm font-semibold text-text-primary" data-sidebar-label>my-buddy</a>
    <button
      id="sidebar-compact-toggle"
      type="button"
      class="hidden rounded-md p-1.5 text-text-secondary hover:bg-surface-2 hover:text-text-primary lg:block"
      aria-label="Toggle compact sidebar"
    >
      <svg class="size-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <path d="M3.75 3.75v4.5m0-4.5h4.5m-4.5 0L9 9M3.75 20.25v-4.5m0 4.5h4.5m-4.5 0L9 15M20.25 3.75h-4.5m4.5 0v4.5m0-4.5L15 9m5.25 11.25h-4.5m4.5 0v-4.5m0 4.5L15 15" />
      </svg>
    </button>
  </div>

  <!-- Navigation links -->
  <nav class="flex-1 overflow-y-auto px-3 py-4">
    {navItems.map((item, i) => {
      if (item.kind === "link") {
        return (
          <div class:list={[i > 0 && "mt-0.5"]}>
            <SidebarLink
              href={item.href}
              label={item.label}
              icon={item.icon}
              currentPath={currentPath}
              shortcut={item.shortcut}
            />
          </div>
        );
      }
      if (item.kind === "separator") {
        return <hr class="my-4 border-border" data-sidebar-heading />;
      }
      return (
        <div class="mt-6">
          <h2 data-sidebar-heading class="mb-2 px-3 text-xs font-semibold uppercase tracking-wider text-text-muted">
            {item.heading}
          </h2>
          <ul class="space-y-0.5">
            {item.links.map((link) => (
              <li>
                <SidebarLink
                  href={link.href}
                  label={link.label}
                  icon={link.icon}
                  currentPath={currentPath}
                  shortcut={link.shortcut}
                />
              </li>
            ))}
          </ul>
        </div>
      );
    })}
  </nav>
</aside>
